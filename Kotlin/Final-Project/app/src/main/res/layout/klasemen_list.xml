<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/teamName"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="@string/teamname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="231dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="@+id/teamTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamGoalsFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="198dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamGoalsAgainst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="165dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="@+id/teamTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamGoalsDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="@+id/teamTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="99dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="@+id/teamTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="@+id/teamTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:text="@string/_00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>